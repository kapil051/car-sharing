<!-- rideDetails.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ride Details</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
  <style>
    /* Add your custom CSS styles here */
    body {
      background-color: #f2f2f2;
      font-family: 'Arial', sans-serif;
    }

    .ride-details {
      background-color: #00aff5;
      border: 1px solid #0077cc;
      border-radius: 8px;
      color: #fff;
      padding: 15px;
      margin-bottom: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .book-link, .profile-link {
      display: inline-block;
      margin-top: 10px;
      padding: 8px 15px;
      background-color: #0077cc;
      color: #fff;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .book-link:hover, .profile-link:hover {
      background-color: #00588a;
    }

    h1, h2 {
      color: #00aff5;
    }
  </style>
</head>
<body>
  <h1>Ride Details</h1>

  <% if (allRidesFromSourceToDestination.length > 0) { %>
    <% allRidesFromSourceToDestination.forEach((ride) => { %>
      <div class="ride-details">
        <h2>Ride Details</h2>
        <p>
          <strong>Source:</strong> <%= ride.source %><br>
          <strong>Destination:</strong> <%= ride.destination %><br>
          <strong>Date:</strong> <%= ride.date %><br>
          <strong>StartTime:</strong> <%= ride.starttime %><br>
          <strong>EndTime:</strong> <%= ride.endtime %><br>
          <strong>Total Price For 1 Passenger:</strong> <%= ride.price %><br>
          <strong>Total Expected Time (it may takes more than expected):</strong> <%= ride.time %><br>
          <strong>Car Name:</strong> <%= ride.carName %><br>
          <strong>Drivers Instructions:</strong> <%= ride.instruction%><br>
          <!-- Add more details based on your Ride model -->
        </p>
        
        <!-- Link to book the ride -->
        <a class="book-link" href="/book-ride?userId=<%= ride.userId %>">Book this Ride</a>
        
        <!-- Link to the profile of the person who published the ride -->
        <a class="profile-link" href="/user-profile?userId=<%= ride.userId %>">View Profile of Driver</a>
      </div>
    <% }); %>
  <% } else { %>
    <p>No rides found for the specified source and destination.</p>
  <% } %>

</body>
</html>
