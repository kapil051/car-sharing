<!-- rideDetails.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ride Details</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
  <h1>Ride Details</h1>

  <% if (allRidesFromSourceToDestination.length > 0) { %>
    <ul>
      <% allRidesFromSourceToDestination.forEach((ride) => { %>
        <li>
          <strong>Source:</strong> <%= ride.source %><br>
          <strong>Destination:</strong> <%= ride.destination %><br>
          <strong>Price:</strong> <%= ride.price %><br>
          <!-- Add more details based on your Ride model -->
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No rides found for the specified source and destination.</p>
  <% } %>

</body>
</html>
